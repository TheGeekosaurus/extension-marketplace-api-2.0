{
  "manifest_version": 3,
  "name": "E-commerce Arbitrage Assistant",
  "version": "1.1.0",
  "description": "Compare product prices across multiple marketplaces for arbitrage opportunities",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.walmart.com/*",
    "https://*.target.com/*",
    "https://*.homedepot.com/*",
    "https://ext.nanotomlogistics.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.walmart.com/*",
        "https://*.target.com/*",
        "https://*.homedepot.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.amazon.com/s*",
        "https://*.walmart.com/search*"
      ],
      "js": ["matchFinder.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
