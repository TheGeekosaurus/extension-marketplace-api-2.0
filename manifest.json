{
  "manifest_version": 3,
  "name": "E-commerce Arbitrage Assistant",
  "version": "1.0.0",
  "description": "Compare product prices across multiple marketplaces for arbitrage opportunities",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.walmart.com/*",
    "https://*.target.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/dp/*",
        "https://*.amazon.com/gp/product/*",
        "https://*.walmart.com/ip/*",
        "https://*.target.com/p/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
